# =============================================================================
# Red Team Automation Framework Configuration
# =============================================================================
# SECURITY WARNING: Never commit this file with real API keys!
# Copy this file to .env and replace placeholder values with real ones.

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash
MODEL_TEMPERATURE=0.1
MAX_TOKENS=4096

# Project Discovery Tools Configuration
# Leave empty to use tools from system PATH
# Specify full paths if tools are installed in custom locations
SUBFINDER_PATH=
HTTPX_PATH=
NUCLEI_PATH=
NUCLEI_TEMPLATES_PATH=

# Project Discovery Cloud API (optional)
# Get from: https://cloud.projectdiscovery.io/
PROJECTDISCOVERY_API_KEY=
PROJECTDISCOVERY_TEAM_ID=

# Rate Limiting Configuration
# Adjust based on target infrastructure and authorization
RATE_LIMIT_RPM=60
RATE_LIMIT_DELAY=1.0

# Database Configuration
VECTOR_DB_PATH=./data/vector_db

# Logging Configuration
# Valid levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
STEPS_LOG_FILE=steps.txt

# Output Configuration
OUTPUT_DIR=./output
REPORTS_DIR=./reports

# Safety and Compliance Configuration
# CRITICAL: Always ensure you have proper authorization before testing!
SCOPE_FILE=scope.yaml
REQUIRE_SCOPE=true

# Auto Report Generation Configuration
AUTO_GENERATE_REPORTS=true
AUTO_REPORT_FORMATS=html,markdown
AUTO_REPORT_ON_COMPLETION=true
AUTO_REPORT_SCHEDULE=
REPORT_NOTIFICATION_WEBHOOK=
BATCH_REPORT_GENERATION=false
MAX_CONCURRENT_REPORTS=3

# =============================================================================
# Security Best Practices:
# 1. Never commit .env files to version control
# 2. Use strong, unique API keys
# 3. Regularly rotate API keys
# 4. Always define and respect scope boundaries
# 5. Ensure proper authorization before any testing
# =============================================================================